%p#notice= notice

.container
  .row
    .col-xs-12.col-sm-12.col-md-6.left-box
      .photo
        %img{src: @photo.media_url}
    .col-xs-12.col-sm-12.col-md-6.right-box
      %div
        %img{src: @user.profile_image_url}
        = link_to "@#{@user.screen_name}", "https://twitter.com/#{@user.screen_name}", target: '_blank'
        &nbsp;
        = "#{@user.name}"
      %div
        = @tweet.text
      %div
        = link_to time_ago_in_words(@tweet.created_at), "https://twitter.com/#{@user.screen_name}/status/#{@tweet.id}", target: '_blank'
      .row(style="font-size: 10px;")
        .col-sm-2
          RETWEETS<br>
          = "<span style='font-size: 18px;'>#{@tweet.retweet_count}</span>".html_safe
        .col-sm-2
          FAVORITES<br>
          = "<span style='font-size: 18px;'>#{@tweet.favorite_count}</span>".html_safe
        .col-sm-8
      %hr
      %div
        = button_to "Search with @#{@user.screen_name}", '', class: 'btn btn-default'
      %div
        = button_to 'Search with this hashtag', '', class: 'btn btn-default'
